{
    "server": {
      "protocol": "HTTP",
      "max_photos": "3"
    },
    "time": {
      "frequency": "10"
    },
    "image": {
      "name": "image",
      "extension": "jpg",
      "width": "3280",
      "height": "2464",
      "hor_flip": false,
      "ver_flip": true,
      "quality": "10",
      "background_color": "#FFFF00",
      "date_format": "%A, %d %B %Y",
      "time_format": "%H:%M"
    },
    "overlays": {
      "top_left": {
        "type": "text",
        "text": "%%DATE %%TIME",
        "font_size": "30",
        "over_the_picture": true,
        "font_color": "#FFFFFF",
        "background_color": "#00000088"
      },
      "bottom_center": {
        "type": "image",
        "path": "logo-zanzocam.png",
        "over_the_picture": true
      }
    }
}
